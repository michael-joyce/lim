<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Full Citation</th>
        </tr>
    </thead>
    <tbody>
        {% for work in works %}
            <tr>
                <td>
                    <a href="{{ path('work_show', { 'id': work.id }) }}">
                        {{ work.title|raw }}
                    </a>
                </td>
                <td>
                    {{ work.citation|raw }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
