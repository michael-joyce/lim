
<table class='table table-bordered table-condensed table-hover table-striped'>
    <tbody>
        <tr>
            <th>Name</th>
            <td>
                                                            {{ occupation.name }}
                                  </td>
          </tr>
          <tr>
            <th>Label</th>
            <td>
                                                            {{ occupation.label }}
                                  </td>
          </tr>
          <tr>
            <th>Description</th>
            <td>
                                                            {{ occupation.description|raw }}
                                  </td>
          </tr>
          
                                                                  <tr>
                <th>Person</th>
                <td>
                  {% if occupation.persons|length > 0 %}
                  <ul>
                      {% for person in occupation.persons %} 
                      <li>
                          <a href='{{ path("person_show", {"id":person.id }) }}'>
                              {{ person }}
                          </a>
                      </li>
                      {% endfor %}
                  </ul>
                  {% endif %}
                </td>
              </tr>
          <tr>
        <th>Created</th>
        <td>{{ occupation.created|date }}</td>
    </tr>
    <tr>
        <th>Updated</th>
        <td>{{ occupation.updated|date }}</td>
    </tr>
    </tbody>
</table>


