  <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
          <tr>
              <th>ID</th>                                       <th>Name</th>
                                                         <th>Label</th>
                                                         <th>Description</th>
                  
          </tr>
      </thead>
      <tbody>
      {% for occupation in occupations %}
          <tr>
              <td>
                  <a href="{{ path('occupation_show', { 'id': occupation.id }) }}">
                      {{ occupation.id }}
                  </a>
              </td>
              <td>
                  {{ occupation.name }}
              </td>
          
              <td>
                  {{ occupation.label }}
              </td>
          
              <td>
                  {{ occupation.description|raw }}
              </td>
          
          </tr>
      {% endfor %}
      </tbody>
  </table>
  