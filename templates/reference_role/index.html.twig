{% extends 'base.html.twig' %}

{% block title %}Reference Role List{% endblock %}

{% block pageheader %}
    <h1>Reference Role List</h1>
    <p class="count">
        Displaying {{ reference_roles|length }} reference_roles of {{ reference_roles.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('reference_role_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('reference_role_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    {% embed 'reference_role/partial/table.html.twig' %}
    {% endembed %}

    <div class="navigation">
        {{ knp_pagination_render(reference_roles) }}
    </div>

{% endblock %}
