<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Sortable Name</th>
            <th>Gender</th>
            <th>Biography</th>

        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.id }}
                    </a>
                </td>
                <td>
                    {{ person.fullName }}
                </td>

                <td>
                    {{ person.sortableName }}
                </td>

                <td>
                    {{ person.gender }}
                </td>

                <td>
                    {{ person.biography|raw }}
                </td>

            </tr>
        {% endfor %}
    </tbody>
</table>
